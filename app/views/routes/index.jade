extends ../layouts/default

block main
  h1= title

block content
  - if (routes.length)
    - each article in routes
        include route

    - if (pages > 1)
      ul.pagination
        != createPagination(pages, page)
  - else
    h4.muted No Routes.&nbsp;
  a(href="/routes/new", style="padding-bottom: 50px;") create one
